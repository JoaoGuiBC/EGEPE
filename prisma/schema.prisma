generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  name          String?
  email         String?   @unique
  emailVerified DateTime?
  document      String?   @unique
  phone         String?
  image         String?

  address      String?
  neighborhood String?
  city         String?

  have_visual_disability       Boolean @default(false)
  have_physical_disability     Boolean @default(false)
  have_hearing_disability      Boolean @default(false)
  have_intellectual_disability Boolean @default(false)
  have_psychosocial_disability Boolean @default(false)

  is_admin Boolean @default(false)

  created_at DateTime  @default(now())
  updated_at DateTime?

  accounts               Account[]
  sessions               Session[]
  CourseEnrollment       CourseEnrollment[]
  MeetingClassEnrollment MeetingClassEnrollment[]

  @@map("users")
}

model Account {
  id String @id @default(cuid())

  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id String @id @default(cuid())

  sessionToken String   @unique
  expires      DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CourseCategory {
  id String @id

  title String @unique

  courses Course[]

  @@map("course_categories")
}

model Course {
  id String @id @default(cuid())

  title           String
  target_audience String
  objective       String
  observations    String
  content         String
  image           String?

  created_at DateTime @default(now())

  category_id String?
  category    CourseCategory? @relation(fields: [category_id], references: [id])

  axes_of_knowledge String[]

  classes           Class[]
  meetings          Meeting[]
  courses_ministers CourseMinister[]
  enrollments       CourseEnrollment[]

  @@map("courses")
}

model Meeting {
  id String @id @default(cuid())

  date                  DateTime
  start_time_in_minutes Int
  end_time_in_minutes   Int

  course_id String?
  course    Course? @relation(fields: [course_id], references: [id])

  enrollments MeetingClassEnrollment[]

  @@map("meetings")
}

model Class {
  id String @id @default(cuid())

  name String

  date                  DateTime
  start_time_in_minutes Int
  end_time_in_minutes   Int

  course_id String?
  course    Course? @relation(fields: [course_id], references: [id])

  enrollments MeetingClassEnrollment[]

  @@map("classes")
}

model CourseEnrollment {
  id String @id @default(cuid())

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id])

  course_id String?
  course    Course? @relation(fields: [course_id], references: [id])

  @@index([user_id, course_id])
  @@map("course_enrollments")
}

model MeetingClassEnrollment {
  id String @id @default(cuid())

  user_was_present Boolean @default(false)

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id])

  meeting_id String?
  meeting    Meeting? @relation(fields: [meeting_id], references: [id])

  class_id String?
  class    Class?  @relation(fields: [class_id], references: [id])

  @@index([user_id, meeting_id, class_id])
  @@map("meeting_class_enrollments")
}

model Minister {
  id String @id @default(cuid())

  name          String @unique
  qualification String

  courses_ministers CourseMinister[]

  @@map("ministers")
}

model CourseMinister {
  id String @id @default(cuid())

  minister_id String?
  course_id   String?

  minister Minister? @relation(fields: [minister_id], references: [id])
  course   Course?   @relation(fields: [course_id], references: [id])

  @@unique([minister_id, course_id])
  @@map("course_minister")
}
